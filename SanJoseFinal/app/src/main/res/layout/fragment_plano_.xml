<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Plano_Fragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.36"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/san_jose_logo"
            android:scaleType="fitStart"/>

        <ImageView
            android:id="@+id/remoteeye_plano"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="180dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/remoteeye_icon4"
            android:scaleType="fitEnd"
            android:clickable="true"
            android:contentDescription="hf_commands:remote eye|hf_show_text"/>

        <ImageView
            android:id="@+id/zoom_plano"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.45"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/zoom_icon"
            android:scaleType="fitEnd"
            android:clickable="true"
            android:contentDescription="hf_commands:zoom|hf_show_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.95">

        <android.widget.Button
            android:id="@+id/btnPlano"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:text="Ver plano"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/plano1et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/planofinal"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/planofinal"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/planofinal"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/planofinal"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/planofinal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.95"
        android:layout_marginRight="10dp">

        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="false"/>

        <android.widget.Button
            android:id="@+id/btnPlano1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_doc_btn"
            android:text="1"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <android.widget.Button
            android:id="@+id/btnPlano2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_doc_btn"
            android:text="2"
            android:textAllCaps="false"
            android:textSize="18dp" />
        <android.widget.Button
            android:id="@+id/btnPlano3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/custom_doc_btn"
            android:text="3"
            android:textAllCaps="false"
            android:textSize="18dp" />
        <android.widget.Button
            android:id="@+id/btnPlano4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/custom_doc_btn"
            android:text="4"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <android.widget.Button
            android:id="@+id/btnPlano5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:layout_weight="1.1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_doc_btn"
            android:text="5"
            android:textAllCaps="false"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.36"
        android:background="@color/gray">

        <android.widget.Button
            android:id="@+id/btnAnterior_plano"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Anterior"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:clickable="false"
            android:background="@null"/>

        <android.widget.Button
            android:id="@+id/btnGuardarIncidencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Guardar incidencia"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@null"/>
    </LinearLayout>



</LinearLayout>