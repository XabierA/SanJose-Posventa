<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Esp_Disc_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@drawable/san_jose_logo"
            android:scaleType="fitStart"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/remoteeye_icon"
            android:scaleType="fitEnd"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="Especialidad"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Disciplina"
            android:paddingLeft="50dp"
            android:layout_marginTop="5dp"
            android:textSize="35dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chElectricidad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:paddingLeft="30dp"
                android:text="Electricidad"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <CheckBox
                android:id="@+id/chFontaneria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:paddingLeft="30dp"
                android:text="Fontaneria"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <CheckBox
                android:id="@+id/chEstructura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:paddingLeft="30dp"
                android:text="Estructuras"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <CheckBox
                android:id="@+id/chOtras"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:paddingLeft="30dp"
                android:text="Otras"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chDc1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:paddingLeft="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <CheckBox
                android:id="@+id/chDc2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:paddingLeft="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <CheckBox
                android:id="@+id/chDc3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:paddingLeft="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <CheckBox
                android:id="@+id/chDc4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:paddingLeft="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <android.widget.Button
            android:id="@+id/btnAnterior_Esp_Dsc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="100dp"
            android:text="Anterior"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/main_menu_button"
            android:clickable="false"/>

        <android.widget.Button
            android:id="@+id/btnSiguiente_Esp_Dsc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="50dp"
            android:text="Siguiente"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/main_menu_button"
            android:clickable="false"/>
    </LinearLayout>

</LinearLayout>