<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="42dp"
            android:src="@drawable/san_jose_logo"
            android:scaleType="fitStart"/>


        <TextView
            android:id="@+id/cerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.05"
            android:text="Cerrar sesion"
            android:contentDescription="hf_commands:Cerrar sesion|hf_show_text"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:layout_marginBottom="42dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/remoteeye_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="42dp"
            android:src="@drawable/remoteeye_icon4"
            android:scaleType="fitEnd"
            android:clickable="true"
            android:contentDescription="hf_commands:remote eye|hf_show_text"/>

        <ImageView
            android:id="@+id/zoom_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="42dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/zoom_icon"
            android:scaleType="fitEnd"
            android:clickable="true"
            android:contentDescription="hf_commands:zoom|hf_show_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <android.widget.Button
            android:id="@+id/btnProyectos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@drawable/main_menu_button"
            android:clickable="false"
            android:text="Proyectos"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <android.widget.Button
            android:id="@+id/btnIncidencias"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Incidencias"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:background="@drawable/main_menu_button"
            android:clickable="false"/>

        <android.widget.Button
            android:id="@+id/btnInspecciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:text="Inspecciones"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:background="@drawable/main_menu_button"
            android:clickable="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="false"/>

        <ImageButton
            android:id="@+id/btn_add_inc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/blue_add_icon"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:contentDescription="hf_commands:crear incidencia|hf_show_text"/>

        <ImageButton
            android:id="@+id/btn_add_ins"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/blue_add_icon"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:layout_marginRight="95dp"
            android:contentDescription="hf_commands:crear inspeccion|hf_show_text"/>
    </LinearLayout>

</LinearLayout>